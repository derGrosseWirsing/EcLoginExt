<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="subscriber.xml"/>
    </imports>

    <services>
        <!-- Login Security Service -->
        <service id="ec_login_ext.service.login_security"
                 class="EcLoginExt\Services\LoginSecurityService"
                 public="true">
            <argument type="service" id="models"/>
            <argument type="service" id="templatemail"/>
            <argument type="service" id="front"/>
        </service>

        <!-- Controllers -->
        <service id="ec_login_ext.controller.unlock"
                 class="EcLoginExt\Controllers\Frontend\EcUnlock"
                 public="true">
            <argument type="service" id="ec_login_ext.service.login_security"/>
        </service>
    </services>
</container>